<p id="notice"><%= notice %></p>

<h1>Products</h1>

<% if can? :create, Product %>
  <%= link_to 'Add New Piece', new_product_path, class: 'btn btn-default' %>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Artist</th>
      <th>Rating</th>
      <th>Category</th>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url, class: "thumb" %></td>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= product.brand %></td>
        <td><%= product.rating %></td>
        <td><%= product.category_id %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product, class: "btn btn-default"  %></td>
     
          <% if can? :manage, product %>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Product %>
  <%= link_to 'Add New Piece', new_product_path, class: 'btn btn-default' %>
<% end %>

