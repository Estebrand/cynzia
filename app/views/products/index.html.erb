<p id="notice"><%= notice %></p>

<h1>Pieces</h1>

<% if can? :create, Product %>
  <%= link_to 'Add New Piece', new_product_path, class: 'btn btn-default' %>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th class="products-label">Image</th>
      <th class="products-label">Name</th>
      <th class="products-label">Category</th>
      <th class="products-label">Medium</th>
      <th class="products-label">Year</th>
      <th class="products-label">Size</th>
      <th class="products-label">Description</th>
      <th class="products-label">Price</th>
      <th class="products-label">Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url, class: "thumb" %></td>
        <td><%= product.name %></td>
        <td><%= product.category.name %></td>
        <td><%= product.medium %></td>
        <td><%= product.year %></td>
        <td><%= product.size %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product, class: "btn btn-default"  %></td>
     
          <% if can? :manage, product %>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %></td>
            <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Product %>
  <%= link_to 'Add New Piece', new_product_path, class: 'btn btn-default' %>
<% end %>

