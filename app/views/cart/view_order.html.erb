<h1>My Cart</h1>


	<% if @line_items != nil %>
			<p> Your Items Are: </p>

<!-- new stuff -->

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Piece</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |item| %>
      <tr>
      	<td><%= item.product.name %></td>
        <td><%= image_tag item.product.image.url, class: "thumb" %></td>
        <td><%= number_to_currency item.product.price %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency item.line_item_total %></td>
     
     		 <td><%= link_to 'Edit', edit_product_path(item) %></td>
 


      </tr>
    <% end %>
  </tbody>
</table>

<br>

	<% else %>
	 		<p> There are no items </p>
	<% end %>
<!-- end new stuff -->

	<%= link_to "Proceed to Checkout", checkout_path, class: "btn btn-warning right-side"%>


